{
  "name": "axiom-demo-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx server/src/index.ts",
    "dev:full": "concurrently -n ui,api -c red,cyan \"VITE_AX_DEPLOY_TARGET=local npm run dev\" \"npm run dev:api\"",
    "build": "npm run build:content && vite build",
    "start": "AX_SERVE_STATIC=1 tsx server/src/index.ts",
    "build:content": "tsx scripts/build-content.ts",
    "preview": "vite preview",
    "export": "tsx tools/export.ts",
    "preview:export": "vite preview --strictPort --port 5174 --outDir export/site",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:preview": "PLAYWRIGHT_SERVER_MODE=preview PLAYWRIGHT_USE_EXISTING_SERVER=0 playwright test",
    "test:lighthouse": "node tools/lighthouse-report.mjs",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:lighthouse",
    "ui:scan": "node tools/ui-scan.mjs",
    "ui:walk": "node tools/ui-walkthrough.mjs",
    "format": "prettier --write .",
    "validate:content": "tsx tools/validate-content.ts",
    "content-agent": "tsx tools/content-agent/index.ts",
    "axchat:index": "tsx ops/axchat/indexer.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/static": "^6.12.0",
    "@pmndrs/assets": "^1.7.0",
    "@types/dompurify": "^3.0.5",
    "ajv": "^8.17.1",
    "argon2": "^0.31.2",
    "better-sqlite3": "^11.7.0",
    "dompurify": "^3.2.7",
    "fastify": "^4.28.1",
    "marked": "^12.0.2",
    "postcss": "^8.5.6",
    "postcss-prefix-selector": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0",
    "three": "^0.160.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.48.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.23",
    "@types/react-router-dom": "^5.3.3",
    "@types/three": "^0.160.0",
    "@vitejs/plugin-react": "^4.2.0",
    "axe-core": "^4.10.0",
    "chrome-launcher": "^1.1.0",
    "concurrently": "^8.2.2",
    "gray-matter": "^4.0.3",
    "lighthouse": "^12.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^1.6.1"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}

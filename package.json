{
  "name": "axiom-demo-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "export": "tsx tools/export.ts",
    "preview:export": "vite preview --strictPort --port 5174 --outDir export/site",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:lighthouse": "node tools/lighthouse-report.mjs",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:lighthouse",
    "format": "prettier --write .",
    "validate:content": "tsx tools/validate-content.ts",
    "content-agent": "tsx tools/content-agent/index.ts"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "ajv": "^8.17.1",
    "dompurify": "^3.2.7",
    "marked": "^12.0.2",
    "postcss": "^8.5.6",
    "postcss-prefix-selector": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@axe-core/playwright": "^4.9.0",
    "axe-core": "^4.10.0",
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.23",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.0",
    "chrome-launcher": "^1.1.0",
    "lighthouse": "^12.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vitest": "^1.6.1"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
